---
import titlePages from "../ts/titlePages";
import { MyUser } from "../ts/person";

const [home, about, blog] = titlePages;
const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];
const hobbies = ["photography", "birdwatching", "baseball"];

let identity = new MyUser("Sarah", "Canada", "Technical Writter");
identity.addHobbies(hobbies);
identity.addSkills(skills);

const happy = true;
const finished = false;
const goal = 3;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{about.tabTitle}</title>
    </head>
    <body>
        <a href="/">{home.bodyTitle}</a>
        <a href="/about/">{about.bodyTitle}</a>
        <a href="/blog/">{blog.bodyTitle}</a>

        <h1>{about.bodyTitle}</h1>
        <h2>... and my new Astro site!</h2>

        <p>Here are a few facts about me:</p>

        <ul>
            <li>My name is {identity.getFirstName()}.</li>
            <li>
                I live in {identity.getCountry()} and I work as a {
                    identity.occupation
                }.
            </li>
            {
                identity.getHobbies().length >= 2 && (
                    <li>
                        Two of my hobbires are: {identity.getHobby(0)} and{" "}
                        {identity.getHobby(1)}{" "}
                    </li>
                )
            }
        </ul>

        <p>My skills are:</p>
        <ul>
            {identity.getSkills().map((skill) => <li>{skill}</li>) || "Xd"}
        </ul>

        {happy && <p>I am happy to be learning Astro!</p>}

        {finished && <p>I finished this tutorial!</p>}

        {
            goal === 3 ? (
                <p>My goal is to finish in 3 days.</p>
            ) : (
                <p>My goal is not 3 days.</p>
            )
        }
    </body>
</html>
